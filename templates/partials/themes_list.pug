mixin themeBox(theme)
  - const url = `/themes/${theme.key}`
  a.no-underline(href=url title=`Movies about ${theme.name}`)
    div.theme-box.h4.h5-ns.bg-light-purple.ba.bw1.b--light-gray.light-gray.flex.flex-row.pointer.hover-bg-purple
      .img-container.w-50.bg-purple.h-100
        if theme.image && theme.image.secure_url
          span.cover.dib.w-100.h-100(style=`background-image:url("${theme.image.secure_url}")`)
      .title-container.w-50
        p.mt5.mt6-ns.ml2.ml3-ns.f4.f3-ns.fw6.ttu=theme.name

.themes-list.w-100
  ul.list.pl0.ma0.flex.flex-row.flex-wrap.w-100.ba.bw1.b--light-gray.bg-light-gray
    each theme in themes
      li.w-100.w-50-l
        +themeBox(theme)
