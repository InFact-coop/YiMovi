extends ../layouts/base

block content
  #contact.w-100.absolute.tc.bg-gray.z-1.h-100
    .mw6.dib.tc.w-100.pb4
      h1.f3.tc.light-gray #{__.contact.title}
      
      #address 
      h2.f4.red #{__.contact.address_title}
      .silver #{__.contact.address_body}
      
      h1.f3.tc.light-gray #{__.contact.online_title}
      
      #form.dib.w-100.pr2
        form(method='POST', action=`http://formspree.io/${email}`)
          input(type='text', name='name', placeholder=`${__.contact.placeholder_name}` title=`${__.contact.placeholder_name}`).dib.w-100.bn.bb.bg-light-silver.br2.ma1.f5.pa2.white
          br
          input(type='email', name='_replyto', placeholder=`${__.contact.placeholder_email}` title=`${__.contact.placeholder_email}`).dib.w-100.bg-light-silver.bn.br2.ma1.f5.pa2.white
          br
          textarea(name='message', placeholder=`${__.contact.placeholder_message}` title=`${__.contact.placeholder_message}`).dib.w-100.bg-light-silver.bn.br2.ma1.f5.pa2.h4.white
          br
          input(type="hidden" name="_next" value=`/?mailsent=true`)
          #actions.flex.flex-row.justify-center.items-center
            a(href='/').dib.pointer.f5.no-underline.lh-solid.fw4.bg-light-red.light-gray.pa3.br1.ma2 #{__.contact.action_cancel}
            input(type="submit" value=`${__.contact.action_send}`).dib.pointer.f5.no-underline.lh-solid.fw3.bn.bg-green.light-gray.pa3.br1.ma2
            
        
        
