extends ../layouts/base
include ../mixins/snippets
include ../mixins/movie-listing

block content
  #title-container.pa3.shadow-5.z-1.light-gray(class=`bg-${primaryColor}`)
    
    +breadcrumbs("themes", theme.name)
    
    h1.ttu.f2.f1-ns.fw7.lh-title.ma0.mb1.mb3-ns=theme.name
    
    if theme.description && theme.description.html
      .description.w-70-ns
        +sectionParagraph(theme.description.html, true)
    
    hr.ma3
    
    h2.ttu.f4.f3-ns.fw6.lh-title.ma0=`${__.theme_profile.title} ${theme.name}`
    
  ul.list.pl0.ma0
    each movie in movies
      li
        +movieListing(movie, "themes")
        

block scripts
  script
    include ../js/main.js
