extends ../layouts/base
include ../mixins/snippets
include ../mixins/listings

//- VARS FROM VIEW 
  themes - array of theme objects
  color - string

mixin themeBox(theme)
  - const title = `${__.list_themes.link_title} ${theme.name}`
  - const chineseThemeName = theme.name.length > 0 ? theme.name : theme.name___en
  - const themeName = locale === 'en' ? theme.name : chineseThemeName
  - const img = theme.image && theme.image.secure_url ? theme.image.secure_url : null
  +listing("themes", themeName, theme.key, title, primaryColor, img)

block content
  
  +titleContainer(primaryColor)
    +breadcrumbs(`${__.navbar.themes}`)
    h1.ttu.f2.f1-ns.fw7.lh-title.ma0.mb1.mb3-ns.white
      | #{__.list_themes.title}
  
  +list()
    each theme in themes
        +themeBox(theme)
