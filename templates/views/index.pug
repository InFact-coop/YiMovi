extends ../layouts/base

include ../mixins/snippets
include ../mixins/theme-listing

mixin aboutUsPara
  p.ph4.lh-copy
    block
      
mixin teamName
  p.ph4.lh-copy.ma0
    block

block content
    #titleContainer.pa4.bg-dark-red.light-gray
      h1.f-subheadline.fw7.ttu.lh-title.ma0
        | Chinese film and the cross-cultural medical humanities
        
    #imgContainer.vh-75.bg-black
      span.h-100.w-100.cover.dib(style=`background-image:url(/images/homepage/img1.jp`)
        
    #bylineContainer.ph4.pv3.bg-red.light-gray.f1.fw7
      p What can the Sinophone world offer to the Medical Humanities?
      p What can the Medical and Health Humanities offer to China?
      
    #themesSection
      - const theme1 = { key: 'cats', name: 'cats', }
      - const theme2 = { key: 'dogs', name: 'dogs', }
      
      #themesTitle.ttu.bg-purple.ph4.pv3.light-gray.f2
        h2.ma0 top themes
      
      #themesListings
        +themeBox(theme1)
        +themeBox(theme2)
      
      a.no-underline(href="/themes" title="Browse all themes")  
        #browseThemesBox.ttu.bg-purple.ph4.pv3.light-gray.f3.hover-bg-light-purple
          h2.ma0 Browse all themes >>
      
      a.no-underline(href="/movies" title="Browse all movies")    
        #browseThemesBox.ttu.bg-dark-blue.ph4.pv3.light-gray.f3.hover-bg-blue
          h2.ma0 Browse all movies >>  
