extends ../layouts/base
include ../mixins/snippets
include ../mixins/listings
        
mixin splashImage(imageNumber)
  - const imageUrl = `background-image:url(/images/homepage/img${imageNumber}.jpg);`
  span.transition-opacity.vh-75.w-100.cover.bg-center.dib.absolute(style=imageUrl)
          
block content
  #titleContainer.pa4.mt5-ns.mt4.white(class=`bg-${primaryColor}`)
    h1.f2.f1-ns.fw7.ttu.lh-title.ma0
      | #{__.index.header}
      
  #homeImageContainer.bg-black
    +splashImage(1)
    +splashImage(2)
    +splashImage(3)
    +splashImage(4)
    +splashImage(5)
        
    div.vh-75
          
  #bylineContainer.ph4.pv2.pv4-ns.white.tc.f4.f3-ns.fw5.lh-title(class=`bg-${primaryColor}`)
    p #{__.index.byline1}
    p #{__.index.byline2}
          
          
  include ../partials/about
                    
  script
    include ../js/home_images.js
          
  if themes && themes.length
    #themesSection
      #themesTitle.ttu.bg-purple.ph5-ns.pv3.white
        h2.ma0.f4.f2-ns.white #{__.index.top_themes_title}
                  
      +list()
        each theme in themes
          - const title =  + `${__.index.theme_link_title} ${theme.name}`
          - const img = theme.image && theme.image.secure_url ? theme.image.secure_url : null
          +listing("themes", theme.name, theme.key, title, "purple", img)
          
      
          
      #titleContainer.pv3.ph5-ns.white(class=`bg-${primaryColor}`)
        h1.f3.f2-ns.fw7.ttu.lh-title.ma0.white Our Categories
        
      a.no-underline(href=`/themes` title="Browse all themes")  
        #browseThemesBox.ttu.bg-white.ph3.ph5-ns.pv3.gray.hover-bg-light-purple.hover-white.pointer.bt.b--dark-gray
          h2.ma0.f4.f3-ns.fw5 #{__.index.link_themes} >>
        
      a.no-underline(href=`/movies` title="Browse all movies")                
        #browseMoviesBox.ttu.bg-white.ph3.ph5-ns.pv3.gray.hover-bg-light-blue.hover-white.pointer.bt.b--dark-gray
          h2.ma0.f4.f3-ns.fw5 #{__.index.link_movies} >>
        
      a.no-underline(href=`/directors` title="Browse all directors")                
        #browseDirectorsBox.ttu.bg-white.ph3.ph5-ns.pv3.gray.hover-bg-light-green.hover-white.pointer.bt.b--dark-gray
          h2.ma0.f4.f3-ns.fw5 #{__.index.link_directors} >>  
        
      a.no-underline(href=`/genres` title="Browse all genres")                
        #browseGenresBox.ttu.bg-white.ph3.ph5-ns.pv3.gray.hover-bg-light-yellow.hover-white.pointer.bt.b--dark-gray
          h2.ma0.f4.f3-ns.fw5 #{__.index.link_genres} >>  
  //- contact form
  block content
    #contactUsSection.contactAnchor-ns.contactAnchor(tabindex="-1")
    #contact.w-100.tc
        h1.f4.f2-ns.white.ttu.bg-blue.ph5-ns.pv3.white.tl.mv0 #{__.contact.title}
        .mw6.dib.w-100.pb4.mt3-ns.mt4.center.ph3
          h2.tl.fw5.mb0 Suggest a film
          h3.tl.fw2.mt0.mb1 Fill in your suggestion and screening notes by following the link below.
          a(href="https://docs.google.com/forms/d/e/1FAIpQLSdJk948B5C9Zidn39z5SgbUK08JiZVq9WhWklUjMJkD_zTrPQ/viewform?usp=sf_link" target="blank").tl.dib.pointer.br2.f5.no-underline.lh-solid.fw3.bn.bg-light-blue.hover-bg-blue.white.pa3.ph4.mb5.mt3.dt Suggest film
          
          form(method='POST', action=`http://formspree.io/${email}`)
            h2.tl.fw5.mb0 Ask YiMovi a question
            h3.tl.fw2.mt0 Fill in the form below and YiMovi will get back to you as soon as possible. 
            h4.tl.mb0.blue.fw3.pl1 #{__.contact.placeholder_name}
            input(type='text', name='name', placeholder=`${__.contact.placeholder_name}` title=`${__.contact.placeholder_name}`).dib.w-100.ba.b--black-20.bg-black-05.br2.ma1.f5.pa2.dark-gray.mb1
            br
            h4.tl.mb0.blue.fw3.pl1 #{__.contact.placeholder_email}
            input(type='email', name='_replyto', placeholder=`${__.contact.placeholder_email}` title=`${__.contact.placeholder_email}`).dib.w-100.bg-black-05.br2.ma1.f5.pa2.ba.b--black-20.dark-gray.mb1
            br
            h4.tl.mb0.blue.fw3.pl1 #{__.contact.placeholder_message}
            textarea(name='message', placeholder=`${__.contact.placeholder_message}` title=`${__.contact.placeholder_message}`).dib.w-100.bg-black-05.br2.ma1.f5.pa2.h4.ba.b--black-20.dark-gray
            br
            input(type="hidden" name="_next" value=`/?mailsent=true`)
            #actions.flex.flex-row.items-center
              input(type="submit" value=`${__.contact.action_send}`).dib.pointer.br2.f5.no-underline.lh-solid.fw1.bn.bg-light-blue.hover-bg-blue.white.pa3.ph4.mv3
