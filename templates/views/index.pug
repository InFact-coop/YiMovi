extends ../layouts/base
include ../mixins/snippets
include ../mixins/theme-listing

        
mixin splashImage(imageNumber)
  - const imageUrl = `background-image:url(/images/homepage/img${imageNumber}.jpg);`
  span.transition-opacity.vh-75.w-100.cover.dib.absolute(style=imageUrl + " background-position: center")
          
block content
  #titleContainer.pa4.bg-dark-red.light-gray
    h1.f2.f1-ns.fw7.ttu.lh-title.ma0
      | Chinese film and the cross-cultural medical humanities
      
  #homeImageContainer.bg-black
    +splashImage(1)
    +splashImage(2)
    +splashImage(3)
    +splashImage(4)
    +splashImage(5)
        
    div.vh-75
          
  #bylineContainer.ph4.pv2.pv4-ns.bg-red.light-gray.f3.f2-ns.fw7.lh-title
    p What can the Sinophone world offer to the Medical Humanities?
    p What can the Medical and Health Humanities offer to China?
            
  if themes && themes.length
    #themesSection
      #themesTitle.ttu.bg-purple.ph4.pv3.light-gray
        h2.ma0.f4.f2-ns top themes
                  
      #themesListings
        include ../partials/themes_list
                    
      a.no-underline(href="/themes" title="Browse all themes")  
        #browseThemesBox.ttu.bg-purple.ph4.pv3.light-gray.hover-bg-light-purple.pointer
          h2.ma0.f4.f2-ns Browse all themes >>
                      
        #browseMoviesBox.ttu.bg-dark-blue.ph4.pv3.light-gray.hover-bg-blue.pointer
          h2.ma0.f4.f2-ns Browse all movies >>  
                        
        include ../partials/about_us
                        
  script
    include ../js/home_images.js
